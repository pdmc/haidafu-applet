.flex-inline-around {
  display: flex;
  flex-direction: row;
  justify-content:space-around;  
  align-items: center;
}
.flex-inline-between {
  display: flex;
  flex-direction: row;
  justify-content:space-between;  
  align-items: center;
}
.flex-inline-left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;  
  align-items: center;
}
.flex-inline-right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;  
  align-items: center;
}
.flex-vertical {
  display: flex;
  flex-direction: column; 
}
.flex-vertical-center {
  display: flex;
  flex-direction: column; 
	justify-content: center;
