/* pages/question/question.wxss */
@import "../../static/css/common.wxss";
.page {
  width: 100%;
	height: 100%;
	overflow-y: scroll
}
.qArea {
	margin: 20rpx 20rpx;
  padding: 30rpx 20rpx 20rpx 20rpx;
	width: 670rpx;
	text-align: center;
	box-shadow: 0px 6px 30px 6px rgba(229, 229, 229, 1);
	border: 1px solid rgba(255, 255, 255, 0);
}
.qDetail {
	margin: 10rpx 0;
}

.labelsq {
	margin-right: 20rpx;
	padding: 10rpx 20rpx 0rpx;
	height: 40rpx;
	line-height: 29rpx;
	background-color: rgba(226, 226, 226, 1);
	color: rgba(16, 16, 16, 1);
	text-align: center;

}
.lowerBar {
	margin-top: 30rpx;
}
.lowerBar image {
	width: 40rpx;
	height: 40rpx;
	border-radius: 40rpx;
	margin-top: 20rpx;
}
.nickName {
	margin-left: 20rpx;
}
.infoBar {
	margin-top: -20rpx;
	padding-left: 60rpx;
}

.aArea {
	margin-bottom: 100rpx;
}
.ansHead {
	margin: 30rpx 0rpx 20rpx 0rpx;
	padding-left: 20rpx;
}

.aitem {
	padding: 40rpx 20rpx;
}
.aitem image {
	width: 40rpx;
	height: 40rpx;
	border-radius: 40rpx;
}
.ansNickname {
	margin: 0rpx 20rpx;
}
.ansText {
	margin-top: 20rpx;
}




/*   --------------- 底部固定栏 -----------------   */
.bottom {
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.bottomleft {
	padding: 10rpx;
}
.bottomleft image {
	margin-left: 25rpx;
  width: 50rpx;
  height: 50rpx;
}
.btm-btn {
	width: 100rpx;
  padding: 10rpx;
	text-align: center
}
.btnlbl {
  color: #4B4B4B;
  text-align: center;
}
.bottomright {
	height: 100%;
	width: 100%;
}
.hongbao-nav {
	height: 100%;
  width: 55%;
}
.share {
  font-size: 30rpx;
  height: 100rpx;
  width: 45%;
  background-color: #1FAFFF;
  align-items: stretch;
}
.answerBtn {
	width: 240rpx;
  height: 100rpx;
  line-height: 100rpx;
	padding: 0rpx 30rpx;
  background-color: #FFA94D;
	color: #FFFFFF;
	text-align: center;
}