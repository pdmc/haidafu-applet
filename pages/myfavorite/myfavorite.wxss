/* pages/myfavorite/myfavorite.wxss */
.page-body {   
	width: 100%;   
}

.page-list {
  width: 100%;
	height: 280rpx;
}
.item {
	position: relative;
  display: flex;
  padding: 40rpx 40rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  cursor: pointer;
	background-color: #FFFFFF;
}
.item .poster {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.item .meta {
  flex: 1;
}
.item .meta .title,.item .meta .area {
  display: block;
}
.item .meta .title {
  font-size: 36rpx;
	margin-bottom: 20rpx;
}
.item .meta .area {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .meta .square {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .price {
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #FF4081;
}

.delete {
	position: absolute;
	top:0;
	right: 0;
	height: 280rpx;
	line-height: 280rpx;
	background-color: #1FAFFF;
	width: 180rpx;
	text-align: center;
	z-index: -1;
	color: #fff;
}





.inner{
    position: absolute;
    top:0;

}
.inner.del{
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}
