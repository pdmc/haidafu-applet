/* pages/myfavorite/myfavorite.wxss */
@import "../../static/css/common.wxss";

/*---------------- 总体 ---------------*/
.container {
	width: 100%;
}


.select-tab{
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-around;
  height: 100%;
  font-size: 32rpx;
  /*background-color: #fff;
  border-top:1px solid #FFFFFF;
  border-bottom:1px solid #FFFFFF;*/
}
.select-tab view{
  display: flex;
  align-items: center;
  margin: 30rpx 0rpx;
  padding: 24rpx 0rpx;
}
.select-tab view.inactive {
  border-bottom: 6rpx solid inherit;
}
.select-tab view.active{
  color: #1FAFFF;
  border-bottom: 6rpx solid #1FAFFF;
}

/*---------------- 房产 ---------------*/
.select-page {
	position: absolute;
	left: 0;
	top: 152rpx;
	width: 100%;
	overflow: show;
	/*border-top: 1rpx #E5E5E5 solid;
	*/
}
.page-list {
  width: 100%;
	height: 280rpx;
}
.page-list navigator {
	width: 100%;
}
.item {
	position: relative;
  display: flex;
  padding: 40rpx 40rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  cursor: pointer;
	background-color: #FFFFFF;
}
.item .poster {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.item .meta {
  flex: 1;
}
.item .meta .title,.item .meta .area {
  display: block;
}
.item .meta .title {
  font-size: 36rpx;
	margin-bottom: 20rpx;
}
.item .meta .area {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .meta .square {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .price {
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #FF4081;
}

.delete {
	position: relative;
	top:0;
	right: 0;
	height: 280rpx;
	line-height: 280rpx;
	background-color: #1FAFFF;
	width: 180rpx;
	text-align: center;
	z-index: -1;
	color: #fff;
}





.inner{
    position: absolute;
    top:0;

}
.inner.del{
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}

/*---------------- 问答 ---------------*/

.qitem {
  padding: 30rpx 20rpx 20rpx;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.firstItem {
	border-top: 1rpx solid rgba(229,229,229,1);
}
.lowerBar {
	margin-top: 10rpx;
}
.labelsq {
	margin-right: 20rpx;
	padding: 10rpx 20rpx 0rpx;
	height: 40rpx;
	line-height: 29rpx;
	background-color: rgba(226, 226, 226, 1);
	color: rgba(16, 16, 16, 1);
	text-align: center;

}