/* pages/questionlist/questionlist.wxss */
@import "../../static/css/common.wxss";

.page {   
	width: 100%;   
	height: 100%;  
} 
.searchArea {
	padding: 30rpx 40rpx;
	text-align: center;
}
.searchInput {
	display: block;
	width: 640rpx;
	height: 60rpx;
	line-height: 60rpx;
	opacity: 0.8;
	border-radius: 100rpx;
	background-color: rgba(187, 187, 187, 1);
	color: rgba(255, 255, 255, 1);
	text-align: center;
	font-family: Roboto;
	border: 1px solid rgba(255, 255, 255, 0);


}
.imageArea {
	padding: 0rpx 20rpx 30rpx 20rpx;
}
.imageArea image {
	width: 710rpx;
	height: 260rpx;
}
.qitem {
  padding: 30rpx 20rpx 20rpx;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.lowerBar {
	margin-top: 10rpx;
}
.labelsq {
	margin-right: 20rpx;
	padding: 10rpx 20rpx 0rpx;
	height: 40rpx;
	line-height: 29rpx;
	background-color: rgba(226, 226, 226, 1);
	color: rgba(16, 16, 16, 1);
	text-align: center;

}
.ask {
	position: fixed;
	right: 40rpx;
	bottom: 60rpx;
	width: 140rpx;
	height: 140rpx;
	line-height: 130rpx;
	opacity: 0.9;
	background-color: rgba(255, 152, 0, 1);
	color: rgba(255, 255, 255, 1);
	text-align: center;
	border-radius: 140rpx;
}
