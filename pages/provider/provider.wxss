/* pages/provider/provider.wxss */
/*  -------------- 查询返回列表 ------------------ */
@import "../../static/css/common.wxss";

.page-body {   
	width: 100%;   
}

.header {
	width: 100%;
	padding: 20rpx 30rpx;
	border-bottom: 1rpx #E5E5E5 solid;
}
.header image {
	width: 100rpx;
	height: 100rpx;
}
.name {
	margin-left: 20rpx;
	font-size: 32rpx;
}
.detail {
	border-bottom: 1rpx #E5E5E5 solid;
}
.detail > .title {
	width: 100%;
	padding: 20rpx 0rpx 20rpx 30rpx;
	font-size: 36rpx;
}

.desc {
	font-size: 30rpx;
	color: #BBBBBB;
	padding: 0rpx 20rpx 20rpx 30rpx;
}

.listarea {
	margin-top: 20rpx;
}
.listarea > .title {
	width: 100%;
	padding: 20rpx 0rpx 20rpx 30rpx;
	font-size: 36rpx;
}
.page-list {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item {
  display: flex;
  padding: 40rpx 30rpx;
  /*border-top: 1rpx solid rgba(0,0,0,0.1);*/
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  cursor: pointer;
}
.item .poster {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.item .meta {
  flex: 1;
}
.item .meta .title,.item .meta .area {
  display: block;
}
.item .meta .title {
  font-size: 36rpx;
	margin-bottom: 20rpx;
}
.item .meta .area {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .meta .square {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .price {
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #FF4081;
}
