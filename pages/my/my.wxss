/* pages/my/my.wxss */
@import "../../static/css/common.wxss";


.infoArea {
	padding: 60rpx 0rpx 60rpx 30rpx;
}
.infoArea > image {
	width: 120rpx;
	height: 120rpx;
}
.nameArea {
	width: 50%;
	margin-left: 30rpx;
}
.nickname {
	margin-bottom: 10rpx;
}

.mylist {
	padding: 30rpx 0rpx 30rpx 30rpx;
	margin: 30rpx 0rpx;
	border-top: 1rpx solid rgba(0,0,0,0.1);
	border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.mylist image {
	width: 40rpx;
	height: 40rpx;
}
.arrow{
	width: 10px;
	height: 10px;
	border-top: 2px solid #999;
	border-right: 2px solid #999;
	position: relative;
	right: 30rpx;
	transform: rotate(45deg);
}