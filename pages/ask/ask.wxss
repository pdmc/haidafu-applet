/* pages/ask/ask.wxss */
@import "../../static/css/common.wxss";

.page {   
	width: 100%;   
	height: 100%;  
} 
.form {    
	padding: 40rpx 20rpx 50rpx 20rpx;
} 
.titleTa {
	margin: 10rpx 0rpx;
	width: 690rpx;
	height: 100rpx;
	line-height: 41rpx;
	border-radius: 15rpx;
	background-color: rgba(248, 248, 248, 1);
	color: rgba(136, 136, 136, 1);
	text-align: left;
	border: 1px solid rgba(187, 187, 187, 1);
	padding: 10rpx;
}
.contentLabel {
	margin-top: 20rpx;
}
.contentTa {
	margin: 10rpx 0rpx;
	width: 690rpx;	
	height: 500rpx;
	line-height: 41rpx;
	border-radius: 15rpx;
	background-color: rgba(248, 248, 248, 1);
	color: rgba(136, 136, 136, 1);
	text-align: left;
	border: 1px solid rgba(187, 187, 187, 1);
	padding: 10rpx;
}

.labelArea {
	margin: 20rpx 0rpx;
	display: flex;
	height: 150rpx;
	flex-flow:row wrap;
	align-content: space-around;
}
.labelText {
	width: 150rpx;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 100rpx;
	background-color: rgba(226, 226, 226, 1);
	color: rgba(16, 16, 16, 1);
	text-align: center;
	padding: 10rpx 50rpx;
	margin-right: 20rpx;
}
.verifyArea {
	margin: 24rpx 0rpx;
}
.verifyInput {
	margin-right: 10rpx;
	width: 300rpx;
	height: 80rpx;
	border-radius: 10rpx;
	border: 1px solid rgba(187, 187, 187, 1);
	background-color: rgba(248, 248, 248, 1);
	color: rgba(136, 136, 136, 1);
	text-align: left;
	padding-left: 10rpx
}
.verifyImage {
	text-align: center;
	z-index:9999;
}
.verifyBtn {
	display: block;
	width: 160rpx;
	height: 60rpx;
	border-radius: 10rpx;
	color: rgba(16, 16, 16, 1);
	text-align: center;
	border: 0rpx;	
}


.submitBtn {
	display: block;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background-color: rgba(31, 175, 255, 1);
	text-align: center;
	border: 0px;
	border-radius: 0rpx;
	color: #FFFFFF;
}