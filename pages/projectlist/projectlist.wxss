/*  -------------- 查询返回列表 ------------------ */
.page-body {   
	width: 100%;   
	position: absolute;   
	top: 120rpx;   
	z-index: 20; 
}

.page-list {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item {
  display: flex;
  padding: 40rpx 40rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  cursor: pointer;
}
.item .poster {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.item .meta {
  flex: 1;
}
.item .meta .title,.item .meta .area {
  display: block;
}
.item .meta .title {
  font-size: 36rpx;
	margin-bottom: 20rpx;
}
.item .meta .area {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .meta .square {
  font-size: 28rpx;
  color: #BBBBBB;
}
.item .price {
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #FF4081;
}

