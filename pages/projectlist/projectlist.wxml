<!--pages/projectlist/projectlist.wxml-->
<!--pages/list/list.wxml-->
<!--列表页-->
<view class='container'>
  <!--等待框-->
  <loading hidden="{{!loading}}">加载中...</loading>
  <!--顶部标题栏-->
  <view class='page-header'>
    <text class='page-title'>{{title}}</text>
  </view>
  <!--列表-->
  <view class='page-body' wx:for="{{list.data}}" wx:key="id">
    <!--类型判断,显示不同的数据-->
    <block wx:if="{{type === 'us_box'}}">
      <navigator url='../project/project?pId={{item.pId}}'>
        <view class='item'>
          <image class='poster' src='{{item.thumbnail}}'></image>
          <view class='meta'>
            <text class='title'>{{item.pName}}</text>
            <text class='sub-title'>{{item.countryId}}</text>
            <view class='square'>
              <text>{{item.minSquare}}m2-{{item.maxSquare}}m2</text>
            </view>
            <view class='price'>
              <text>{{item.minPrice}}万~{{item.maxPrice}}万</text>
            </view>
          </view>
        </view>
      </navigator>
    </block>
  </view>
</view>